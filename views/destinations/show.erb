<div class="row">
  <div class="col-xs-4 col-xs-offset-2">  
      <h2><%= @destination.name + ", " + @destination.country%></h2>
  </div>
  <div class="col-xs-4 col-xs-offset-2">  
      <h2>Street View</h2>
  </div>
</div>


<div class="row"> 
  <div class="col-xs-6">
    <img id="destImg" src="<%= @destination.photo_url %>" alt="<%= @destination.name %> photo" height="400" width="600">
  </div>
  <div class="col-xs-6">
    <div id="street-view"></div>
  </div>
</div>  
<div class="row">
  <ul>
    <li><%= @destination.location %></li>
    <li><%= @destination.latitude %></li>
    <li><%= @destination.longitude %></li>
    <li><%= @destination.interesting_fact %></li>
  </ul>
</div>

<script type="text/javascript">
  var data = <%= @destination.to_json %>
  initialize(data);
</script>

